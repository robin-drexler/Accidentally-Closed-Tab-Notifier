{
    "name":"Gentle Accidentally Closed Tab Notifier",
    "version":"1212.1",
    "manifest_version":2,
    "description":"Notifies with an unobtrusive page action when you might have accidentally closed a tab.",
    "background":{
        "page":"background.html"
    },
    "page_action":{
        "default_icon":{
            "19":"icons/19.png",
            "38":"icons/38.png"
        },
        "default_popup":"fragments/popup.html"
    },

    "icons":{
        "16":"icons/16.png",
        "48":"icons/48.png",
        "128":"icons/128.png"
    },
    "permissions":[
        "tabs"
    ]
}
